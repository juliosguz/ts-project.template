{
  "name": "ts-project.template",
  "version": "1.0.0",
  "description": "Base project to start with a Typescript project.",
  "scripts": {
    "dev": "nodemon",
    "lint": "eslint . --ext .ts",
    "test": "jest --collectCoverageFrom='src/**/*.ts'",
    "build": "npm run lint && webpack --progress --config ./build-config/webpack.config.js"
  },
  "keywords": [
    "yarn",
    "eslint",
    "nodemon",
    "typescript",
    "jest",
    "ts-jest"
  ],
  "author": "Julio Silva",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node14": "^1.0.2",
    "@types/jest": "^28.1.1",
    "@types/node": "17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.17.0",
    "fork-ts-checker-webpack-plugin": "^7.2.11",
    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "ts-jest": "^28.0.4",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
