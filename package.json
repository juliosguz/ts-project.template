{
  "name": "ts-project.template",
  "version": "1.0.0",
  "description": "Base project to start with a Typescript project.",
  "scripts": {
    "dev": "nodemon",
    "lint": "eslint . --ext .ts",
    "test": "jest --collectCoverageFrom='src/**/*.ts'",
    "build": "npm run lint && webpack --progress --config ./build-config/webpack.config.js"
  },
  "keywords": [
    "yarn",
    "eslint",
    "nodemon",
    "typescript",
    "jest",
    "ts-jest"
  ],
  "author": "Julio Silva",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.10",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "copy-webpack-plugin": "^9.0.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "fork-ts-checker-webpack-plugin": "^6.3.1",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.3.5",
    "webpack": "^5.47.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
